<div class="container">
<h2><strong><%= @furniture.title%></strong></h2>
  <div id="carouselExample" class="carousel-slide">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "sofa.jpg", class: "d-block w-100", style: "height: auto; max-height: 250px;", alt: "Sofa pic" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "sofa.jpg", class: "d-block w-100", style: "height: auto; max-height: 250px;", alt: "Sofa pic" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "sofa.jpg", class: "d-block w-100", style: "height: auto; max-height: 250px;", alt: "Sofa pic" %>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div class="card-details" style="display: flex; justify-content: space-between;">
    <h3><strong><%= @furniture.description %></strong></h3>
    <p><%= @furniture.address %></p>
    <p><%= @furniture.condition %></p>
    <% if @furniture.availability == true %>
      <p>Available</p>
    <% end %>
    <div style="display: flex; justify-content: space-between;">
      <p style="margin-right: 10px;"><strong><%= @furniture.price %>€</strong></p>
      <button type="button" class="btn btn-primary" style="padding: 6px; margin-right: 30px; margin-bottom: 40px;">Book</button>
    </div>
  </div>
</div>
